{
	"manifest_version": 3,
	"name": "Contao Improved",
	"version": "1.0.0",
	"description": "Additional features for the Contao backend",
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"content_scripts": [
		{
			"js": ["extension.js"],
			"css": ["style.css"],
			"matches": [
				"https://*/contao*",
				"https://*/contao/*",
				"http://*/contao*",
				"http://*/contao/*"
			]
		}
	],
	"background": {
		"service_worker": "service-worker.js"
	},
	"permissions": ["storage", "declarativeNetRequest"],
	"host_permissions": [
		"https://*/contao*",
		"https://*/contao/*",
		"http://*/contao*",
		"http://*/contao/*"
	],
	"options_page": "options/options.html",
	"action": {
		"default_popup": "options/options.html"
	},
	"web_accessible_resources": [{
		"resources": ["assets/*"],
		"matches": ["<all_urls>"]
    }]
}
